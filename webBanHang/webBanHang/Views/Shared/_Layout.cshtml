<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NÔNG SẢN XANH</title>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <link rel="stylesheet" href="~/wwwroot/css/style.css" />
    <link rel="stylesheet" href="~/wwwroot//css/productDetail.css" />
</head>
<body ng-app="myApp">
    <!-- header -->
    <!-- ********************************************* -->
    <div class="header">
        <div class="container">
            <div class="header_root">
                <div class="header_top">
                    <a href="#"><h1>NÔNG SẢN XANH</h1></a>
                    <div class="header_TimKiem">
                        <select>
                            <option>All</option>
                            <option>Sản phẩm</option>
                        </select>
                        <input placeholder="Search..." />
                    </div>
                    <div class="header_LogIn">
                        <a href="/DangNhap/DangNhap">
                            <i class="fas fa-user"></i>
                        </a>
                        <a href="/GioHang/GioHang">
                            <i class="fas fa-cart-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header_Menu">
        <div class="container">
            <div class="header_Menu_root">
                <ul class="header_List">
                    <li class="header_item">
                       @Html.ActionLink("Trang chủ", "TrangChu", "TrangChu")
                    </li>
                    <li class="header_item">
                        @Html.ActionLink("Giới thiệu", "TrangChu", "TrangChu")
                    </li>
                    <li class="header_item">
                        @Html.ActionLink("Liên hệ", "TrangChu", "TrangChu")
                    </li>
                    <li class="header_item">
                        @Html.ActionLink("Sản phẩm", "TrangChu", "TrangChu")
                    </li>
                    <li class="header_item">
                        @Html.ActionLink("Chi tiết sản phẩm", "TrangChu", "TrangChu")
                    </li>
                </ul>
                <div class="header_Time">
                    <span><a href="#">Contact</a></span>
                    <span>08:00 - 17:00</span>
                </div>
            </div>
        </div>
    </div>
    <!-- Content -->
    <!-- ********************************************* -->
    <div class="content">
        @RenderBody();
    </div>
    <!-- Footer -->
    <!-- ********************************************* -->
    <div class="footer">
        <div class="container">
            <div class="footer_root">
                <div class="footer_LienHe">
                    <h3>LIÊN HỆ</h3>
                    <h3>CÔNG TY CỔ PHẦN ACEGROUP</h3>
                    <p>
                        Địa chỉ trụ sở: 441/42C Điện Biên Phủ, Phường 25, Quận Bình
                        Thạnh, TP HCM
                    </p>
                    <p>Website: nongsanxanhvnn.com</p>
                </div>
                <div class="footer_Tags">
                    <h3>TAGS</h3>
                    <a href="#">Chim câu</a>
                    <a href="#">Rau sạch</a>
                    <a href="#">Tôm rảo</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
