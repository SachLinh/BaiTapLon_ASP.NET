@model IEnumerable<webBanHang.Models.Product>



@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="content_HeaderImg">
        <img src="~/wwwroot/images/anhBackGround.jpeg" width="1050" height="600" />
    </div>
    <!-- list product -->
    <div class="content_products">
        <h2>SẢN PHẨM BÁN CHẠY</h2>
        <div class="content_list">
            @foreach (var item in Model)
            {
                
                <div class="content_item">
                    <div class="content_img">
                        @{
                            string ImagePath = "~/wwwroot/images/" + item.ProImage;
                        }
                        <img src="@Url.Content(ImagePath)" width="100" height="200" class="img-thumbnail" />
                    </div>
                    <div class="content_detail">
                        <span class="category">@Html.DisplayFor(modelItem => item.Catalogy.CataName)</span><br />
                        <span class="name">@Html.DisplayFor(modelItem => item.ProName)</span><br />
                        <span class="price">@Html.DisplayFor(modelItem => item.Price)đ</span>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="content_products">
        <h2>THỊT CÁ DÂN DÃ</h2>
        <div class="content_list">
            @foreach (var item in Model)
            {
                if (item.ID == "Loai1")
                {
