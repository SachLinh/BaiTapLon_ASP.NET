@using webBanHang.Models
@model IEnumerable<Product>


@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var spbc = (List<SPNoiBat>)ViewBag.SanPhamBanChay;
}

<style>
    .content_img {
        position: relative;
    }

        .content_img .con {
            position: absolute;
            top: 0%;
            left: 30%;
            transform: translate(-15%, 0%);
            opacity: 0;
            font-size: 25px;
            color: red;
            background-color: #53a5f5;
            border: none;
            height: 30px;
            width:130px;
            border-radius:15px;
            text-align:center
        }

    .content_item:hover .con {
        transform: translate(-15%, 350%);
        opacity: 1;
        transition: 1s;
    }
</style>




<div class="container">
    <div class="content_HeaderImg">
        <img src="~/wwwroot/images/anhBackGround.jpeg" width="1050" height="600" />
    </div>
    <!-- list product -->

    <div class="content_products">
        <h2>SẢN PHẨM BÁN CHẠY</h2>
        <div class="content_list">
            @foreach (var item in spbc)
            {
                <div class="content_item">
                    <div class="content_img">
                        @{
                            string ImagePath = "~/wwwroot/images/" + item.ProImage;
                        }
                        <a href="/SanPham/Detail?id=@item.ProID">
                            <img src="@Url.Content(ImagePath)" width="100" height="200" class="img-thumbnail" />
                        </a>
                       
                        <a class="con" href="@Url.Action("ThemGioHang", "Giohang", new { @class="addCart", @sMaSP = item.ProID, @strURL = Request.Url.ToString() })">
                            Đặt mua
                        </a>
                    </div>
                    <div class="content_detail">
                        <span class="category">@Html.DisplayFor(modelItem => item.CataName)</span><br />
                        <span class="name">@Html.DisplayFor(modelItem => item.ProName)</span><br />
                        <span class="price">@Html.DisplayFor(modelItem => item.Price)đ</span>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="content_products">
        <h2>THỊT CÁ DÂN DÃ</h2>
        <div class="content_list">
            @foreach (var item in Model)
