@model IEnumerable<webBanHang.Models.SPNoiBat>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sản Phẩm Bán Chạy</h2>
<h4>Top 3 sản phẩm</h4>
<table class="table">
    <tr style="color:red">
        <th>
            Tên sản phẩm
        </th>

        <th>
            Loại sản phẩm
        </th>
        <th>
            Số lượng có
        </th>
        <th>
            Giá
        </th>
        <th>
            Hỉnh ảnh
        </th>
        <th>
            Ngày nhập
        </th>
        <th>
            Số lượng khách mua
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="color:black">
            <td>
                @Html.DisplayFor(modelItem => item.ProName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CataName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @{
                    string ImagePath = "~/wwwroot/images/" + item.ProImage;
                }
                <img src="@Url.Content(ImagePath)" width="100" class="img-thumbnail" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfImport)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.soluongMua)
            </td>

        </tr>
    }

</table>