@model webBanHang.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết sản phẩm</h2>
<style>
    dt{
        color:red
    }
    dd{
        color:black
    }
</style>
<div>
    <hr />
    <dl class="dl-horizontal" style="color:black">
        <dt>
           Loại SP
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Catalogy.CataName)
        </dd>

        <dt>
           Tên SP
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProName)
        </dd>

        <dt>
           Số Lượng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Quantity)
        </dd>

        <dt>
            Giá Bán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
          Hình Ảnh
        </dt>

        <dd>
            @{
                string ImagePath = "~/wwwroot/images/" + Model.ProImage;
            }
            <img src="@Url.Content(ImagePath)" width="300" class="img-thumbnail" />
            <br />
            @Html.DisplayFor(model => model.ProImage)
        </dd>

        <dt>
            Ngày Nhập
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfImport)
        </dd>

        <dt>
            Mô Tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProDescription)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.ProID }) |
    @Html.ActionLink("Quay lại", "Index")
</p>
