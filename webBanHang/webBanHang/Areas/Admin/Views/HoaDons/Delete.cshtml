@model webBanHang.Models.HoaDon

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    dt{color:red}
    dd{
        color:black
    }
</style>
<h2>Xóa</h2>

<h3>Bạn có chắc chắn muốn xóa hóa đơn này?</h3>
<div>
    <h4>HÓA ĐƠN</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên Khách Hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.Username)
        </dd>

        <dt>
           Khuyến Mại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.KhuyenMai.MaKhuyenMai)
        </dd>

        <dt>
           Ngày Đặt Hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ngayDayHang)
        </dd>

        <dt>
            Nơi Nhận Hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiNhanHang)
        </dd>

        <dt>
            Tình Trạng Thanh Toán
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ThanhToan)
        </dd>

        <dt>
           Tình Trạng Giao Hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GiaoHang)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    }
</div>
@if (ViewBag.Error != null)
{
    <br />
    <div class="alert alert-danger" role="alert">@ViewBag.Error</div>
}