            @Html.DisplayFor(modelItem => item.Product.ProID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuongMua)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
