        <th>
            Số lượng mua
        </th>
        <th>
            Giá 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr style="color:black">
        <td>
            @Html.DisplayFor(modelItem => item.HoaDon.MaHD)
        </td>
